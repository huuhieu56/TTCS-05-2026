{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "fact_events_log",
    "type": "object",
    "required": [
        "event_id",
        "timestamp",
        "session_id",
        "event_type"
    ],
    "properties": {
        "event_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "user_id": {
            "type": [
                "string",
                "null"
            ]
        },
        "session_id": {
            "type": "string"
        },
        "event_type": {
            "type": "string",
            "enum": [
                "view_item",
                "add_to_cart",
                "cart_abandonment"
            ]
        },
        "product_id": {
            "type": [
                "string",
                "null"
            ]
        },
        "device_os": {
            "type": [
                "string",
                "null"
            ]
        },
        "time_spent_seconds": {
            "type": [
                "integer",
                "null"
            ],
            "minimum": 0
        }
    },
    "additionalProperties": false
}